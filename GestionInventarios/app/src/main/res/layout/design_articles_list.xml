<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_layout_gray"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:id="@+id/imagen_list_all_articles"
                android:layout_marginLeft="10dp"
                >

            </ImageView>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Cajas de carton"
                    android:textStyle="bold"
                    android:id="@+id/title_article_list_all_articles"
                    android:textColor="@color/black">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Cajas"
                    android:id="@+id/title_category_list_all_articles"
                    android:textStyle="bold"
                    android:textColor="@color/primary1">

                </TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17"
                android:textSize="28dp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:id="@+id/number_list_all_articles"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black">

            </TextView>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_category_name_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Electronica"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp">

        </TextView>


        <TextView
            android:id="@+id/tv_category_number_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9"
            android:gravity="end"
            android:padding="3dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:textSize="16sp">

        </TextView>

    </LinearLayout>



</LinearLayout>